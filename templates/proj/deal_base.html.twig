{% extends "proj/base.html.twig" %}

{% block title %}Game{% endblock %}

{% block body %}
{{ include('pig/flash.html.twig') }}
<h2>Antal händer: {{ HandsNr }}</h2>
{# sätt upp så att man ser antal händer, banken och så att man kan lägga ner ett value per hand #}
<div class="board">
    <div class="dealer">
        <h1>Dealer</h1>
    </div>
    <div class="hands">
        {% for i in 1..HandsNr %}
            <div class="hand">
                <h1>Hand {{ i }}</h1>
                <ul class="cards">
                    {% for card in playersHandsString[ i - 1 ] %}
                        <li class="card">{{ card }}</li>
                    {% endfor %}
                </ul>
                <strong>Insats: {{ insatser[i] }}</strong><br>
                <strong>Handens värde: {{ playersHandsValues }}</strong>
                {# <strong>Handens värde: {{ playersHandsValues[i - 1] }}</strong> #}
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}